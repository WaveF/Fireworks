var SUBSELECTION_TOOL = 'Subselection';function StraightenPoints(){	if (!fw.selection.length) return false;	var locs = new Array();	for (var s=0; s<fw.selection.length; s++){		if (fw.selection[s].__proto__ == Path.prototype){			for (var c=0; c<fw.selection[s].contours.length; c++){				var ns = fw.selection[s].contours[c].nodes;				for (var n=0; n<ns.length; n++){					if (ns[n].isSelectedPoint || fw.activeTool!=SUBSELECTION_TOOL){						ns[n].predX = ns[n].succX = ns[n].x;						ns[n].predY = ns[n].succY = ns[n].y;						ns[n].isCurvePoint = false;					}				}			}		}	}}StraightenPoints();